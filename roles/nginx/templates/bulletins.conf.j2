server {
    listen {{ nginx_listen_port }};
    server_name {{ nginx_server_name }};

    client_max_body_size 25m;

    location ^~ /.well-known/acme-challenge/ {
        root {{ nginx_acme_webroot }};
        default_type "text/plain";
        try_files $uri =404;
    }

{% if nginx_enable_https | bool %}
    location / {
        return 301 https://$host$request_uri;
    }
{% else %}
    location /api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://{{ nginx_backend_host }}:{{ nginx_backend_port }};
    }

    location /swagger-ui/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://{{ nginx_backend_host }}:{{ nginx_backend_port }};
    }

    location /v3/api-docs {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://{{ nginx_backend_host }}:{{ nginx_backend_port }};
    }

    location /actuator/ {
        allow 127.0.0.1;
        deny all;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://{{ nginx_backend_host }}:{{ nginx_management_port }};
    }

{% if nginx_serve_static | bool %}
    root {{ nginx_static_root }};
    index {{ nginx_static_index }};

    location / {
        try_files $uri $uri/ /{{ nginx_static_index }};
    }
{% else %}
    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://{{ nginx_backend_host }}:{{ nginx_backend_port }};
    }
{% endif %}
{% endif %}
}

{% if nginx_enable_https | bool %}
